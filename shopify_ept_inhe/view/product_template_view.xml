<?xml version="1.0" ?>
<odoo>
    <record id="product_template_inherit_form_shopify_tags" model="ir.ui.view">
        <field name="name">product.template.inherit.form.shopify.tags</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_variant_id']" position="after">
                <field name="shopify_tag_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//form/sheet/notebook" position="inside">
            <page string="Collections">
                    <field name="product_collection_ids" widget="many2many_list" nolabel="1" >    domain="[('company_id', '=', allowed_company_ids[0])]" 
                        <tree string="Collections" editable="bottom" create="false">
                            <field name="is_exported" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                            <field name="name" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_inherited_sho" model="ir.ui.view">
        <field name="name">product.template.tree.view.inherited.sho</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="product_collection_ids" widget="many2many_tags" optional="show"/>
            </xpath>
        </field>
    </record>

