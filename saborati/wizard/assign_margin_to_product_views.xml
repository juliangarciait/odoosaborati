<?xml version="1.0" encoding="utf-8"?>

<odoo>


    <record id="assign_margin_to_product_view" model="ir.ui.view">
        <field name="name">assign.margin.to.product.wizard.view</field>
        <field name="model">assign.margin.to.product</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="margin" string="Margen:" widget="percentage"/>
                </group>
                <footer>
                    <button name="apply" string="Aplicar" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    
</odoo>