<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="product_pricelist_item_tree_view_saborati" model="ir.ui.view">
        <field name="name">product.pricelist.item.tree.view.saborati</field>
        <field name="model">product.pricelist.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="pricelist_id"/>
                <field name="min_quantity" colspan="4"/>
            </tree>
        </field>
    </record>

    <record id="action_product_pricelist_item" model="ir.actions.act_window">
        <field name="name">Elementos de las listas de precios</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No product pricelist items registered
            </p>
        </field>
    </record>


    <menuitem id="product_pricelist_item_menu" name="Elementos de las listas de precios" action="action_product_pricelist_item" parent="sale.product_menu_catalog" sequence="25"/>
</odoo>