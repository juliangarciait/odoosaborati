<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="product_pricelist_form_view_inherit_main_pricelist" model="ir.ui.view">
        <field name="name">product.pricelist.form.view.inherit.main.pricelist</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[@name='pricelist_settings']" position="after">
                <group name="main_pricelist">
                    <field name="is_main_pricelist"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>