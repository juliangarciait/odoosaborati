<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="add_colony" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-set='address']/div[@t-field='doc.partner_id']" position="replace">
            <div t-field="doc.partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
            <p t-if="doc.partner_id.l10n_mx_edi_colony">Colonia: <span t-field="doc.partner_id.l10n_mx_edi_colony"/></p>
            <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
        </xpath>
    </template>

</odoo>